  setDebugMessageLevel(2);
  ArduinoCloud.printDebugInfo();
}


void loop() {
  ArduinoCloud.update();
  temperature = ENV.readTemperature();
  float humidity = ENV.readHumidity();
  dewPoint = dPoint(temperature, humidity);
  float pressure = ENV.readPressure(MILLIBAR);
  illuminance = float(ENV.readIlluminance());
  uVIndex = float(ENV.readUVIndex());
  float qnh_raw = (pressure - 0.3) * pow(1 + 0.00002567294033 * fieldElev / pow(pressure - 0.3, 0.190284), 1 / 0.190284);
  float alt = 2.95300 * qnh_raw;
  if (qnh_raw < 1000) {
     qNH = "Q0" + String(round(qnh_raw)) + "/A" + String(round(alt));
  } else {
     qNH = "Q" + String(round(qnh_raw)) + "/A" + String(round(alt)); 
  }
}
